 -- SQL CREATE TABLE statement for a table named Students.
 
 
 -- STUDENT_ID INT PRIMARY KEY , DEPT_ID INT FORIGEN KEY , FIRST_NAME = VARCHAR(50) , LAST_NAME VARCHAR(50) 
 -- , DATE_OF_BIRTH DATE = DATE , EMAIL = VARCHAR(255) , GENDER = CHAR  
 
 CREATE TABLE STUDENT (
 
  STUDENT_ID INT PRIMARY KEY ,
  DEPT_ID INT, 
  FIRST_NAME VARCHAR(50),
  LAST_NAME VARCHAR(50),
  DATE_OF_BIRTH DATE , 
  EMAIL VARCHAR(255),
  GENDER CHAR(1) ,
  FOREIGN KEY (DEPT_ID) REFERENCES DEPARTMENT(DEPT_ID) 
 
 );
 
 
 
 
 
 
 